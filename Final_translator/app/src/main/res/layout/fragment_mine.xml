<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.MineFragment">
<LinearLayout
    android:padding="5dp"
    android:id="@+id/allmine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="35dp"
        android:id="@+id/head_icon"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/head"
            android:src="@drawable/head_icon"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/detail"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="100dp">
            <LinearLayout
                android:id="@+id/name"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="昵称："
                    >
                </TextView>

                <TextView
                    android:layout_marginLeft="12dp"
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="尚未登录"
                    >
                </TextView>
            </LinearLayout>

          <LinearLayout
              android:id="@+id/account"
              android:orientation="horizontal"
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="账号："
                  >
              </TextView>

              <TextView
                  android:layout_marginLeft="12dp"
                  android:id="@+id/detail_account"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="尚未登录">
              </TextView>
          </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="96dp">
        <LinearLayout
            android:id="@+id/lchange_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/change_name">
            </ImageView>
            <TextView
                android:id="@+id/change_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="更改昵称">
            </TextView>
        </LinearLayout>
        <!--
        <LinearLayout
            android:id="@+id/lchange_icon"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/head_icon">
            </ImageView>
            <TextView
                android:id="@+id/change_icon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="更改头像">
            </TextView>
        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/lshow_history_search"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/history_search">
            </ImageView>
            <TextView
                android:id="@+id/history_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="历史记录">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lexit_account"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/exit">
            </ImageView>
            <TextView
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="退出账号">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</FrameLayout>